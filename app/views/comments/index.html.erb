<p style="color: green"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>AI generated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= comment.ai_generated %></td>
        <td><%= link_to "Show", comment %></td>
        <td><%= link_to "Edit", edit_comment_path(comment) %></td>
        <td>
          <%= button_to "Destroy", comment, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New comment", new_comment_path %>

